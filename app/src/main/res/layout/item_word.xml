<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/word_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admire"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/word_desc"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="vt. 钦佩；羡慕；欣赏"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/word_symbol"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="[ədˈmaiə]"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/word_sound"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="sound path"
                android:layout_height="wrap_content"/>
            <ImageView
                android:padding="10dp"
                android:id="@+id/word_voice"
                android:src="@drawable/voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divideColor"/>
</LinearLayout>